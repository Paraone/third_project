<div class="container">
<div>
	<h1>Welcome</h1>
	<p>Stuff about the site...</p>
	<h2>Levels</h2>
	<ul>
		<% @levels.each do |level| %>
			<li><div><%= level.title %></div></li>
		<% end %>
	</ul>
</div>
<div>
	<div>
		<h2>Sign In</h2>

		<%= form_tag(session_path) do %>
			<p>
				<%= label_tag :email %>
				<%= email_field_tag :email, nil %>
			</p>
			<p>
				<%= label_tag :password %>
				<%= password_field_tag :password, nil %>
			</p>
			<p>
				<%= submit_tag "Sign In" %>
			</p>
		<% end %>
	</div>
	<div>
		<h1>All Users</h1>
		<ul>
			<% @users.each do |user| %>
				<li>
					<%= link_to user.name, user %>
				</li>
			<% end %>
		</ul>
	</div>
</div>
</div>
